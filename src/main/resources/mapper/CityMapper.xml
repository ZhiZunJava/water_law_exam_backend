<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.can.water_law_exam_backend.mapper.CityMapper">

    <resultMap id="BaseResultMap" type="org.can.water_law_exam_backend.entity.City">
        <id column="id" property="id"/>
        <result column="city_name" property="cityName"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, city_name, create_time, update_time
    </sql>

    <!-- 查询所有城市列表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_city
        ORDER BY id ASC
    </select>

    <!-- 分页查询城市列表（使用PageHelper，不需要LIMIT） -->
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_city
        <where>
            <if test="key != null and key != ''">
                AND city_name LIKE CONCAT('%', #{key}, '%')
            </if>
        </where>
        ORDER BY id ASC
    </select>

    <!-- 根据ID查询城市信息 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_city
        WHERE id = #{id}
    </select>

    <!-- 根据城市名称查询城市信息 -->
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_city
        WHERE city_name = #{cityName}
    </select>

    <!-- 添加城市 -->
    <insert id="insert" parameterType="org.can.water_law_exam_backend.entity.City"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_city (city_name)
        VALUES (#{cityName})
    </insert>

    <!-- 更新城市信息 -->
    <update id="update">
        UPDATE tb_city
        SET city_name = #{cityName},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除城市 -->
    <delete id="deleteById">
        DELETE FROM tb_city
        WHERE id = #{id}
    </delete>

    <!-- 批量删除城市 -->
    <delete id="deleteBatch">
        DELETE FROM tb_city
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 检查城市下是否有单位 -->
    <select id="countOrganizationsByCityId" resultType="int">
        SELECT COUNT(*)
        FROM tb_organization
        WHERE city_id = #{cityId}
    </select>

</mapper>

