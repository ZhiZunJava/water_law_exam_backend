<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.can.water_law_exam_backend.mapper.AccountUserMapper">

    <resultMap id="BaseResultMap" type="org.can.water_law_exam_backend.entity.AccountUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="org_id" property="orgId"/>
        <result column="id_no" property="idNo"/>
        <result column="phone" property="phone"/>
        <result column="pwd" property="pwd"/>
        <result column="locked" property="locked"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 扩展ResultMap，包含组织名称 -->
    <resultMap id="AccountUserWithOrgResultMap" type="org.can.water_law_exam_backend.entity.AccountUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="org_id" property="orgId"/>
        <result column="org_name" property="orgName"/>
        <result column="id_no" property="idNo"/>
        <result column="phone" property="phone"/>
        <result column="pwd" property="pwd"/>
        <result column="locked" property="locked"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, org_id, id_no, phone, pwd, locked, create_time, update_time
    </sql>

    <select id="selectByIdNo" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_account_user
        WHERE id_no = #{idNo}
    </select>

    <select id="selectById" resultMap="AccountUserWithOrgResultMap">
        SELECT
            u.id,
            u.name,
            u.org_id,
            o.org_name,
            u.id_no,
            u.phone,
            u.pwd,
            u.locked,
            u.create_time,
            u.update_time
        FROM tb_account_user u
        LEFT JOIN tb_organization o ON u.org_id = o.id
        WHERE u.id = #{id}
    </select>

    <update id="updatePassword">
        UPDATE tb_account_user
        SET pwd = #{pwd},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_account_user (name, org_id, id_no, phone, pwd, locked, create_time, update_time)
        VALUES (#{name}, #{orgId}, #{idNo}, #{phone}, #{pwd}, #{locked}, NOW(), NOW())
    </insert>

    <update id="update">
        UPDATE tb_account_user
        SET name = #{name},
            org_id = #{orgId},
            id_no = #{idNo},
            phone = #{phone},
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM tb_account_user
        WHERE id = #{id}
    </delete>

    <delete id="deleteBatch">
        DELETE FROM tb_account_user
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="toggleLock">
        UPDATE tb_account_user
        SET locked = NOT locked,
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <select id="selectByPage" resultMap="AccountUserWithOrgResultMap">
        SELECT
            u.id,
            u.name,
            u.org_id,
            o.org_name,
            u.id_no,
            u.phone,
            u.pwd,
            u.locked,
            u.create_time,
            u.update_time
        FROM tb_account_user u
        LEFT JOIN tb_organization o ON u.org_id = o.id
        <where>
            <if test="orgId != null">
                AND u.org_id = #{orgId}
            </if>
            <if test="key != null and key != ''">
                AND (u.name LIKE CONCAT('%', #{key}, '%') OR u.id_no LIKE CONCAT('%', #{key}, '%'))
            </if>
        </where>
        ORDER BY u.create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countAll" resultType="long">
        SELECT COUNT(*)
        FROM tb_account_user
        <where>
            <if test="orgId != null">
                AND org_id = #{orgId}
            </if>
            <if test="key != null and key != ''">
                AND (name LIKE CONCAT('%', #{key}, '%') OR id_no LIKE CONCAT('%', #{key}, '%'))
            </if>
        </where>
    </select>

    <select id="selectByPhone" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tb_account_user
        WHERE phone = #{phone}
    </select>

    <!-- 根据单位ID查询单位名称 -->
    <select id="selectOrgNameById" resultType="string">
        SELECT org_name
        FROM tb_organization
        WHERE id = #{orgId}
    </select>

</mapper>


