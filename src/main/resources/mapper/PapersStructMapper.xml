<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.can.water_law_exam_backend.mapper.PapersStructMapper">

    <resultMap id="StructResultMap" type="org.can.water_law_exam_backend.entity.PapersStruct">
        <id property="id" column="id"/>
        <result property="papersId" column="papers_id"/>
        <result property="typeId" column="type_id"/>
        <result property="typeName" column="type_name"/>
        <result property="typeRemarks" column="type_remarks"/>
        <result property="score" column="score"/>
    </resultMap>

    <insert id="insertBatch">
        INSERT INTO tb_papers_struct (papers_id, type_id, type_name, type_remarks, score)
        VALUES
        <foreach collection="list" item="it" separator=",">
            (#{it.papersId}, #{it.typeId}, #{it.typeName}, #{it.typeRemarks}, #{it.score})
        </foreach>
    </insert>

    <delete id="deleteByPapersIds">
        DELETE FROM tb_papers_struct WHERE papers_id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">#{id}</foreach>
    </delete>

    <select id="selectByPapersId" resultMap="StructResultMap">
        SELECT id, papers_id, type_id, type_name, type_remarks, score
        FROM tb_papers_struct
        WHERE papers_id = #{papersId}
        ORDER BY id ASC
    </select>
</mapper>
