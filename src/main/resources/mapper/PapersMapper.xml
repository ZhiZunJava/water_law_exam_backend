<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.can.water_law_exam_backend.mapper.PapersMapper">

    <resultMap id="PapersResultMap" type="org.can.water_law_exam_backend.entity.Papers">
        <id property="id" column="id"/>
        <result property="papersTitle" column="papers_title"/>
        <result property="papersNo" column="papers_no"/>
        <result property="totalScore" column="total_score"/>
        <result property="templateId" column="template_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="org.can.water_law_exam_backend.entity.Papers" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_papers (papers_title, papers_no, total_score, template_id)
        VALUES (#{papersTitle}, #{papersNo}, #{totalScore}, #{templateId})
    </insert>

    <delete id="deleteBatch">
        DELETE FROM tb_papers WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">#{id}</foreach>
    </delete>

    <select id="selectById" resultMap="PapersResultMap">
        SELECT id, papers_title, papers_no, total_score, template_id, create_time
        FROM tb_papers
        WHERE id = #{id}
    </select>

    <select id="selectByPage" resultMap="PapersResultMap">
        SELECT id, papers_title, papers_no, total_score, template_id, create_time
        FROM tb_papers
        <where>
            <if test="key != null and key != ''">
                AND papers_title LIKE CONCAT('%', #{key}, '%')
            </if>
        </where>
        ORDER BY id DESC
    </select>
</mapper>
